.sidebar
  .sidebar__header
    .sidebar__header__user-name
      .sidebar__header__user-name__left-name
        = current_user.name
      .sidebar__header__user-name__right-icon
        .sidebar__header__user-name__right-icon__write
          = link_to new_group_path do
            = icon('far', 'edit', class: 'my-white')
        .sidebar__header__user-name__right-icon__gear
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
            

        
  .sidebar__groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .sidebar__groups__top
          = group.name
        .sidebar__groups__top__second
          = group.show_last_message
