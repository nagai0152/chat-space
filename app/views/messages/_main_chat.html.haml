.chat-main
  .chat-main__header
    .chat-main__header__left
      = @group.name
      .chat-main__header__left__bottom
        Memberï¼š
        - @group.users.each do |user|
          = user.name
    .chat-main__header__right
      = link_to edit_group_path(@group) do
        Edit
  

  .chat-main__groups
    = render @messages
        
  .chat-main__form
    = form_for [@group, @message] , html: {class: 'chat-main__form__left' } do |f|
      = f.text_field :content, class: 'chat-main__form__left__word', placeholder: 'type a message'
      .chat-main__form__left__icon
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'icon')
          = f.file_field :image, class: 'input-box__icon'
      = f.submit 'Send', class: 'chat-main__form__right'
